<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <data>

        <variable
            name="viewModel"
            type="com.framgia.wsm.screen.confirmrequestoff.ConfirmRequestOffViewModel"
            />
        <import type="android.view.View"/>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <android.support.design.widget.AppBarLayout
            android:id="@+id/appbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/AppTheme.AppBarOverlay"
            >
            <android.support.v7.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:popupTheme="@style/AppTheme.PopupOverlay"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="@{viewModel::onCickArrowBack}"
                    app:srcCompat="@drawable/md_nav_back"
                    tools:ignore="ContentDescription"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_35"
                    android:layout_marginStart="@dimen/dp_35"
                    android:text="@{viewModel.titleToolbar}"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/sp_20"
                    />
            </android.support.v7.widget.Toolbar>
        </android.support.design.widget.AppBarLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/frame_button"
                android:scrollbars="none"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp_10"
                    android:orientation="vertical"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        >
                        <ImageView
                            app:srcCompat="@drawable/ic_placeholder_user"
                            tools:ignore="ContentDescription"
                            style="@style/StyleIconConfirm"
                            />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_20"
                            android:layout_marginStart="@dimen/dp_20"
                            android:orientation="vertical"
                            >
                            <TextView
                                android:text="@string/employee_name"
                                style="@style/StyleTitleConfirm"
                                />
                            <TextView
                                android:ellipsize="end"
                                android:maxLines="1"
                                android:text="@{viewModel.user.name}"
                                style="@style/StyleTextConfirm"
                                />
                            <View
                                style="@style/StyleViewConfirm"
                                />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        >
                        <ImageView
                            app:srcCompat="@drawable/ic_staff_code"
                            tools:ignore="ContentDescription"
                            style="@style/StyleIconConfirm"
                            />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_20"
                            android:layout_marginStart="@dimen/dp_20"
                            android:orientation="vertical"
                            >
                            <TextView
                                android:text="@string/employee_code"
                                style="@style/StyleTitleConfirm"
                                />
                            <TextView
                                android:ellipsize="end"
                                android:maxLines="1"
                                android:text="@{viewModel.user.code}"
                                style="@style/StyleTextConfirm"
                                />
                            <View
                                style="@style/StyleViewConfirm"
                                />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:visibility="@{viewModel.visiableProjectName ? View.VISIBLE : View.GONE}"
                        >
                        <ImageView
                            app:srcCompat="@drawable/ic_project"
                            tools:ignore="ContentDescription"
                            style="@style/StyleIconConfirm"
                            />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_20"
                            android:layout_marginStart="@dimen/dp_20"
                            android:orientation="vertical"
                            >
                            <TextView
                                android:text="@string/project_name"
                                style="@style/StyleTitleConfirm"
                                />
                            <TextView
                                android:ellipsize="end"
                                android:maxLines="1"
                                android:text="@{viewModel.requestOff.project}"
                                style="@style/StyleTextConfirm"
                                />
                            <View
                                style="@style/StyleViewConfirm"
                                />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:visibility="@{viewModel.visiablePosition ? View.VISIBLE : View.GONE}"
                        >
                        <ImageView
                            app:srcCompat="@drawable/ic_position_name"
                            tools:ignore="ContentDescription"
                            style="@style/StyleIconConfirm"
                            />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_20"
                            android:layout_marginStart="@dimen/dp_20"
                            android:orientation="vertical"
                            >
                            <TextView
                                android:text="@string/position_name"
                                style="@style/StyleTitleConfirm"
                                />
                            <TextView
                                android:ellipsize="end"
                                android:maxLines="1"
                                android:text="@{viewModel.requestOff.position}"
                                style="@style/StyleTextConfirm"
                                />
                            <View
                                style="@style/StyleViewConfirm"
                                />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        >
                        <ImageView
                            app:srcCompat="@drawable/ic_branch"
                            tools:ignore="ContentDescription"
                            style="@style/StyleIconConfirm"
                            />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_20"
                            android:layout_marginStart="@dimen/dp_20"
                            android:orientation="vertical"
                            >
                            <TextView
                                android:text="@string/branch"
                                style="@style/StyleTitleConfirm"
                                />
                            <TextView
                                android:ellipsize="end"
                                android:maxLines="1"
                                android:text="@{viewModel.requestOff.branch.branchName}"
                                style="@style/StyleTextConfirm"
                                />
                            <View
                                style="@style/StyleViewConfirm"
                                />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        >
                        <ImageView
                            app:srcCompat="@drawable/ic_group"
                            tools:ignore="ContentDescription"
                            style="@style/StyleIconConfirm"
                            />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_20"
                            android:layout_marginStart="@dimen/dp_20"
                            android:orientation="vertical"
                            >
                            <TextView
                                android:text="@string/group"
                                style="@style/StyleTitleConfirm"
                                />
                            <TextView
                                android:ellipsize="end"
                                android:maxLines="1"
                                android:text="@{viewModel.requestOff.group.groupName}"
                                style="@style/StyleTextConfirm"
                                />
                            <View
                                style="@style/StyleViewConfirm"
                                />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:visibility="@{viewModel.detail ? View.VISIBLE : View.GONE}"
                        >
                        <ImageView
                            app:srcCompat="@drawable/ic_status"
                            tools:ignore="ContentDescription"
                            style="@style/StyleIconConfirm"
                            />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_20"
                            android:layout_marginStart="@dimen/dp_20"
                            android:orientation="vertical"
                            >
                            <TextView
                                android:text="@string/status"
                                style="@style/StyleTitleConfirm"
                                />
                            <FrameLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                >
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/accepted"
                                    android:textColor="@color/color_green_status"
                                    android:textStyle="bold"
                                    android:visibility="@{viewModel.acceptStatus ? View.VISIBLE : View.GONE}"
                                    />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/pending"
                                    android:textColor="@color/md_material_blue_600"
                                    android:textStyle="bold"
                                    android:visibility="@{viewModel.pendingStatus ? View.VISIBLE : View.GONE}"
                                    />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/rejected"
                                    android:textColor="@color/color_red_fresh"
                                    android:textStyle="bold"
                                    android:visibility="@{viewModel.rejectStatus ? View.VISIBLE : View.GONE}"
                                    />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/forwarded"
                                    android:textColor="@color/md_material_blue_800"
                                    android:textStyle="bold"
                                    android:visibility="@{viewModel.forwardStatus ? View.VISIBLE : View.GONE}"
                                    />
                            </FrameLayout>
                            <View
                                style="@style/StyleViewConfirm"
                                />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:visibility="@{viewModel.detail ? View.VISIBLE : View.GONE}"
                        >
                        <ImageView
                            app:srcCompat="@drawable/ic_being_handled_by"
                            tools:ignore="ContentDescription"
                            style="@style/StyleIconConfirm"
                            />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_20"
                            android:layout_marginStart="@dimen/dp_20"
                            android:orientation="vertical"
                            >
                            <TextView
                                android:text="@string/being_handled_by"
                                style="@style/StyleTitleConfirm"
                                />
                            <TextView
                                android:ellipsize="end"
                                android:maxLines="1"
                                android:text="@{viewModel.requestOff.beingHandledBy}"
                                style="@style/StyleTextConfirm"
                                />
                            <View
                                style="@style/StyleViewConfirm"
                                />
                        </LinearLayout>
                    </LinearLayout>

                    <!--Off have salary - Company pay-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_10"
                        android:orientation="vertical"
                        android:visibility="@{viewModel.visiableLayoutCompanyPay ? View.VISIBLE : View.GONE}"
                        >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/color_green"
                            android:orientation="horizontal"
                            android:padding="@dimen/dp_10"
                            >
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/off_have_salary_company_pay"
                                android:textColor="@color/color_white"
                                android:textSize="@dimen/sp_16"
                                android:textStyle="bold"
                                />
                            <View
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/dp_2"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="@dimen/dp_5"
                                android:layout_marginStart="@dimen/dp_5"
                                android:background="@color/color_white"
                                />
                        </LinearLayout>
                        <LinearLayout
                            android:visibility="@{viewModel.visiableAnnualLeave ? View.VISIBLE : View.GONE}"
                            style="@style/StyleLinearLayoutConfirmRequestOff"
                            >
                            <TextView
                                android:text="@{viewModel.annualLeaveAmount}"
                                style="@style/StyleTextConfirmRequestOff"
                                />
                            <TextView
                                android:ellipsize="end"
                                android:maxLines="1"
                                android:text="@{viewModel.annualLeave}"
                                style="@style/StyleTextNumberConfirmRequestOff"
                                />
                        </LinearLayout>

                        <LinearLayout
                            android:visibility="@{viewModel.visiableLeaveForChildMarriage ? View.VISIBLE : View.GONE}"
                            style="@style/StyleLinearLayoutConfirmRequestOff"
                            >
                            <TextView
                                android:text="@{viewModel.leaveForChildMarriageAmount}"
                                style="@style/StyleTextConfirmRequestOff"
                                />
                            <TextView
                                android:ellipsize="end"
                                android:maxLines="1"
                                android:text="@{viewModel.leaveForChildMarriage}"
                                style="@style/StyleTextNumberConfirmRequestOff"
                                />
                        </LinearLayout>

                        <LinearLayout
                            android:visibility="@{viewModel.visiableLeaveForMarriage ? View.VISIBLE : View.GONE}"
                            style="@style/StyleLinearLayoutConfirmRequestOff"
                            >
                            <TextView
                                android:text="@{viewModel.leaveForMarriageAmount}"
                                style="@style/StyleTextConfirmRequestOff"
                                />
                            <TextView
                                android:ellipsize="end"
                                android:maxLines="1"
                                android:text="@{viewModel.leaveForMarriage}"
                                style="@style/StyleTextNumberConfirmRequestOff"
                                />
                        </LinearLayout>

                        <LinearLayout
                            android:visibility="@{viewModel.visiableFuneralLeave ? View.VISIBLE : View.GONE}"
                            style="@style/StyleLinearLayoutConfirmRequestOff"
                            >
                            <TextView
                                android:text="@{viewModel.funeralLeaveAmount}"
                                style="@style/StyleTextConfirmRequestOff"
                                />
                            <TextView
                                android:ellipsize="end"
                                android:maxLines="1"
                                android:text="@{viewModel.funeralLeave}"
                                tools:ignore="TooManyViews"
                                style="@style/StyleTextNumberConfirmRequestOff"
                                />
                        </LinearLayout>

                    </LinearLayout>

                    <!--Off have salary - Insurance coverage-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_10"
                        android:orientation="vertical"
                        android:visibility="@{viewModel.visiableLayoutInsurance ? View.VISIBLE : View.GONE}"
                        >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/color_green"
                            android:orientation="horizontal"
                            android:padding="@dimen/dp_10"
                            >
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/off_have_salary_insurance_coverage"
                                android:textColor="@color/color_white"
                                android:textSize="@dimen/sp_16"
                                android:textStyle="bold"
                                />
                            <View
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/dp_2"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="@dimen/dp_5"
                                android:layout_marginStart="@dimen/dp_5"
                                android:background="@color/color_white"
                                />
                        </LinearLayout>
                        <LinearLayout
                            android:visibility="@{viewModel.visiableLeaveForCareOfSickChild ? View.VISIBLE : View.GONE}"
                            style="@style/StyleLinearLayoutConfirmRequestOff"
                            >
                            <TextView
                                android:text="@{viewModel.leaveForCareOfSickChildAmount}"
                                style="@style/StyleTextConfirmRequestOff"
                                />
                            <TextView
                                android:ellipsize="end"
                                android:maxLines="1"
                                android:text="@{viewModel.leaveForCareOfSickChild}"
                                style="@style/StyleTextNumberConfirmRequestOff"
                                />
                        </LinearLayout>

                        <LinearLayout
                            android:visibility="@{viewModel.visiableSickLeave ? View.VISIBLE : View.GONE}"
                            style="@style/StyleLinearLayoutConfirmRequestOff"
                            >
                            <TextView
                                android:text="@{viewModel.sickLeaveAmount}"
                                style="@style/StyleTextConfirmRequestOff"
                                />
                            <TextView
                                android:ellipsize="end"
                                android:maxLines="1"
                                android:text="@{viewModel.sickLeave}"
                                style="@style/StyleTextNumberConfirmRequestOff"
                                />
                        </LinearLayout>

                        <LinearLayout
                            android:visibility="@{viewModel.visiableMaternityLeave ? View.VISIBLE : View.GONE}"
                            style="@style/StyleLinearLayoutConfirmRequestOff"
                            >
                            <TextView
                                android:text="@{viewModel.maternityLeaveAmount}"
                                style="@style/StyleTextConfirmRequestOff"
                                />
                            <TextView
                                android:ellipsize="end"
                                android:maxLines="1"
                                android:text="@{viewModel.maternityLeave}"
                                style="@style/StyleTextNumberConfirmRequestOff"
                                />
                        </LinearLayout>

                        <LinearLayout
                            android:visibility="@{viewModel.visiablePregnancyExaminationLeave ? View.VISIBLE : View.GONE}"
                            style="@style/StyleLinearLayoutConfirmRequestOff"
                            >
                            <TextView
                                android:text="@{viewModel.pregnancyExaminationLeaveAmount}"
                                style="@style/StyleTextConfirmRequestOff"
                                />
                            <TextView
                                android:ellipsize="end"
                                android:maxLines="1"
                                android:text="@{viewModel.pregnancyExaminationLeave}"
                                style="@style/StyleTextNumberConfirmRequestOff"
                                />
                        </LinearLayout>

                        <LinearLayout
                            android:visibility="@{viewModel.visiableMiscarriageLeave ? View.VISIBLE : View.GONE}"
                            style="@style/StyleLinearLayoutConfirmRequestOff"
                            >
                            <TextView
                                android:text="@{viewModel.miscarriageLeaveAmount}"
                                style="@style/StyleTextConfirmRequestOff"
                                />
                            <TextView
                                android:ellipsize="end"
                                android:maxLines="1"
                                android:text="@{viewModel.miscarriageLeave}"
                                style="@style/StyleTextNumberConfirmRequestOff"
                                />
                        </LinearLayout>

                        <LinearLayout
                            android:visibility="@{viewModel.visiableWifeLaborLeave ? View.VISIBLE : View.GONE}"
                            style="@style/StyleLinearLayoutConfirmRequestOff"
                            >
                            <TextView
                                android:text="@{viewModel.wifeLaborLeaveAmount}"
                                style="@style/StyleTextConfirmRequestOff"
                                />
                            <TextView
                                android:ellipsize="end"
                                android:maxLines="1"
                                android:text="@{viewModel.wifeLaborLeave}"
                                style="@style/StyleTextNumberConfirmRequestOff"
                                />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="vertical"
                        android:visibility="@{viewModel.visiableLayoutHaveSalary ? View.VISIBLE : View.GONE}"
                        >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            >
                            <ImageView
                                app:srcCompat="@drawable/ic_clock"
                                tools:ignore="ContentDescription"
                                style="@style/StyleIconConfirm"
                                />
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/dp_20"
                                android:layout_marginStart="@dimen/dp_20"
                                android:orientation="vertical"
                                >
                                <TextView
                                    android:id="@+id/textView"
                                    android:text="@string/off_have_salary_from"
                                    style="@style/StyleTitleConfirm"
                                    />
                                <TextView
                                    android:ellipsize="end"
                                    android:maxLines="1"
                                    android:text="@{viewModel.startDateHaveSalary}"
                                    style="@style/StyleTextConfirm"
                                    />
                                <View
                                    style="@style/StyleViewConfirm"
                                    />
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            >
                            <ImageView
                                app:srcCompat="@drawable/ic_clock"
                                tools:ignore="ContentDescription"
                                style="@style/StyleIconConfirm"
                                />
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/dp_20"
                                android:layout_marginStart="@dimen/dp_20"
                                android:orientation="vertical"
                                >
                                <TextView
                                    android:text="@string/off_have_salary_to"
                                    style="@style/StyleTitleConfirm"
                                    />
                                <TextView
                                    android:ellipsize="end"
                                    android:maxLines="1"
                                    android:text="@{viewModel.endDateHaveSalary}"
                                    style="@style/StyleTextConfirm"
                                    />
                                <View
                                    style="@style/StyleViewConfirm"
                                    />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                    <!--Off no salary-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_10"
                        android:orientation="vertical"
                        android:visibility="@{viewModel.visiableLayoutOffNoSalary ? View.VISIBLE : View.GONE}"
                        >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/color_green"
                            android:orientation="horizontal"
                            android:padding="@dimen/dp_10"
                            >
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/off_no_salary"
                                android:textColor="@color/color_white"
                                android:textSize="@dimen/sp_16"
                                android:textStyle="bold"
                                />
                            <View
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/dp_2"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="@dimen/dp_5"
                                android:layout_marginStart="@dimen/dp_5"
                                android:background="@color/color_white"
                                />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_10"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            >
                            <ImageView
                                app:srcCompat="@drawable/ic_clock"
                                tools:ignore="ContentDescription"
                                style="@style/StyleIconConfirm"
                                />
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/dp_20"
                                android:layout_marginStart="@dimen/dp_20"
                                android:orientation="vertical"
                                >
                                <TextView
                                    android:text="@string/off_no_salary_from"
                                    style="@style/StyleTitleConfirm"
                                    />
                                <TextView
                                    android:ellipsize="end"
                                    android:maxLines="1"
                                    android:text="@{viewModel.startDateNoSalary}"
                                    style="@style/StyleTextConfirm"
                                    />
                                <View
                                    style="@style/StyleViewConfirm"
                                    />
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            >
                            <ImageView
                                app:srcCompat="@drawable/ic_clock"
                                tools:ignore="ContentDescription"
                                style="@style/StyleIconConfirm"
                                />
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/dp_20"
                                android:layout_marginStart="@dimen/dp_20"
                                android:orientation="vertical"
                                >
                                <TextView
                                    android:text="@string/off_no_salary_to"
                                    style="@style/StyleTitleConfirm"
                                    />
                                <TextView
                                    android:ellipsize="end"
                                    android:maxLines="1"
                                    android:text="@{viewModel.endDateNoSalary}"
                                    style="@style/StyleTextConfirm"
                                    />
                                <View
                                    style="@style/StyleViewConfirm"
                                    />
                            </LinearLayout>
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dp_30"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        >
                        <ImageView
                            app:srcCompat="@drawable/ic_reason"
                            tools:ignore="ContentDescription"
                            style="@style/StyleIconConfirm"
                            />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_20"
                            android:layout_marginStart="@dimen/dp_20"
                            android:orientation="vertical"
                            >
                            <TextView
                                android:text="@string/reason"
                                style="@style/StyleTitleConfirm"
                                />
                            <TextView
                                android:ellipsize="end"
                                android:maxLines="1"
                                android:text="@{viewModel.requestOff.reason}"
                                style="@style/StyleTextConfirm"
                                />
                            <View
                                style="@style/StyleViewConfirm"
                                />
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>

            </ScrollView>
            <FrameLayout
                android:id="@+id/frame_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:visibility="@{viewModel.visibleButtonSubmit ? View.VISIBLE : View.GONE}"
                >
                <Button
                    android:id="@+id/button_submit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/color_green"
                    android:onClick="@{viewModel::onClickSubmit}"
                    android:text="@string/submit"
                    android:textColor="@color/color_white"
                    android:visibility="@{viewModel.detail ? View.GONE : View.VISIBLE}"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="@{viewModel.detail ? View.VISIBLE : View.GONE}"
                    android:weightSum="2"
                    >
                    <Button
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/color_red_firebrick"
                        android:onClick="@{viewModel::onClickDelete}"
                        android:text="@string/delete"
                        android:textColor="@color/color_white"
                        tools:ignore="ButtonStyle"
                        />
                    <Button
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/color_green"
                        android:onClick="@{viewModel::onClickEdit}"
                        android:text="@string/edit"
                        android:textColor="@color/color_white"
                        tools:ignore="ButtonStyle"
                        />
                </LinearLayout>
            </FrameLayout>
        </RelativeLayout>
    </LinearLayout>
</layout>
