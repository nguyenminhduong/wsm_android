<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <data>

        <variable
            name="viewModel"
            type="com.framgia.wsm.screen.confirmrequestleave.ConfirmRequestLeaveViewModel"
            />
        <import type="android.view.View"/>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <android.support.design.widget.AppBarLayout
            android:id="@+id/appbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/AppTheme.AppBarOverlay"
            >
            <android.support.v7.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:popupTheme="@style/AppTheme.PopupOverlay"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="@{viewModel::onClickArrowBack}"
                    android:src="@drawable/md_nav_back"
                    tools:ignore="ContentDescription"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_35"
                    android:layout_marginStart="@dimen/dp_35"
                    android:text="@{viewModel.titleToolbar}"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/sp_20"
                    />
            </android.support.v7.widget.Toolbar>
        </android.support.design.widget.AppBarLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/frame_button"
                android:scrollbars="none"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp_5"
                    android:orientation="vertical"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >
                        <TableLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="@dimen/dp_10"
                            android:shrinkColumns="1"
                            android:stretchColumns="1"
                            >
                            <TableRow
                                android:gravity="center_vertical">
                                <ImageView
                                    app:srcCompat="@drawable/ic_placeholder_user"
                                    tools:ignore="ContentDescription"
                                    style="@style/StyleIconConfirm"
                                    />
                                <LinearLayout
                                    android:layout_marginLeft="@dimen/dp_20"
                                    android:layout_marginStart="@dimen/dp_20"
                                    android:orientation="vertical"
                                    >
                                    <TextView
                                        android:text="@string/employee_name"
                                        style="@style/StyleTitleConfirm"
                                        />
                                    <TextView
                                        android:text="@{viewModel.user.name}"
                                        style="@style/StyleTextConfirm"
                                        />
                                    <View
                                        android:layout_width="match_parent"
                                        android:layout_height="@dimen/dp_1"
                                        android:layout_marginBottom="@dimen/dp_5"
                                        android:layout_marginTop="@dimen/dp_5"
                                        android:background="@color/colorPrimary"
                                        />
                                </LinearLayout>
                            </TableRow>

                            <TableRow
                                android:gravity="center_vertical">
                                <ImageView
                                    app:srcCompat="@drawable/ic_staff_code"
                                    tools:ignore="ContentDescription"
                                    style="@style/StyleIconConfirm"
                                    />
                                <LinearLayout
                                    android:layout_marginLeft="@dimen/dp_20"
                                    android:layout_marginStart="@dimen/dp_20"
                                    android:orientation="vertical"
                                    >
                                    <TextView
                                        android:text="@string/employee_code"
                                        style="@style/StyleTitleConfirm"
                                        />
                                    <TextView
                                        android:text="@{viewModel.user.code}"
                                        style="@style/StyleTextConfirm"
                                        />
                                    <View
                                        android:layout_width="match_parent"
                                        android:layout_height="@dimen/dp_1"
                                        android:layout_marginBottom="@dimen/dp_5"
                                        android:layout_marginTop="@dimen/dp_5"
                                        android:background="@color/colorPrimary"
                                        />
                                </LinearLayout>
                            </TableRow>

                            <TableRow
                                android:gravity="center_vertical">
                                <ImageView
                                    app:srcCompat="@drawable/ic_branch"
                                    tools:ignore="ContentDescription"
                                    style="@style/StyleIconConfirm"
                                    />
                                <LinearLayout
                                    android:layout_marginLeft="@dimen/dp_20"
                                    android:layout_marginStart="@dimen/dp_20"
                                    android:orientation="vertical"
                                    >
                                    <TextView
                                        android:text="@string/branch"
                                        style="@style/StyleTitleConfirm"
                                        />
                                    <TextView
                                        android:text="@{viewModel.request.branch.branchName}"
                                        android:visibility="@{viewModel.visibleBranch?View.VISIBLE : View.GONE}"
                                        style="@style/StyleTextConfirm"
                                        />
                                    <TextView
                                        android:text="@{viewModel.request.workspaceName}"
                                        android:visibility="@{viewModel.visibleBranch?View.GONE : View.VISIBLE}"
                                        style="@style/StyleTextConfirm"
                                        />
                                    <View
                                        android:layout_width="match_parent"
                                        android:layout_height="@dimen/dp_1"
                                        android:layout_marginBottom="@dimen/dp_5"
                                        android:layout_marginTop="@dimen/dp_5"
                                        android:background="@color/colorPrimary"
                                        />
                                </LinearLayout>
                            </TableRow>

                            <TableRow
                                android:gravity="center_vertical">
                                <ImageView
                                    app:srcCompat="@drawable/ic_group"
                                    tools:ignore="ContentDescription"
                                    style="@style/StyleIconConfirm"
                                    />
                                <LinearLayout
                                    android:layout_marginLeft="@dimen/dp_20"
                                    android:layout_marginStart="@dimen/dp_20"
                                    android:orientation="vertical"
                                    >
                                    <TextView
                                        android:text="@string/group"
                                        style="@style/StyleTitleConfirm"
                                        />
                                    <TextView
                                        android:text="@{viewModel.request.companyName}"
                                        style="@style/StyleTextConfirm"
                                        />
                                    <View
                                        android:layout_width="match_parent"
                                        android:layout_height="@dimen/dp_1"
                                        android:layout_marginBottom="@dimen/dp_5"
                                        android:layout_marginTop="@dimen/dp_5"
                                        android:background="@color/colorPrimary"
                                        />
                                </LinearLayout>
                            </TableRow>

                            <TableRow
                                android:gravity="center_vertical">
                                <ImageView
                                    app:srcCompat="@drawable/ic_project"
                                    tools:ignore="ContentDescription"
                                    style="@style/StyleIconConfirm"
                                    />
                                <LinearLayout
                                    android:layout_marginLeft="@dimen/dp_20"
                                    android:layout_marginStart="@dimen/dp_20"
                                    android:orientation="vertical"
                                    >
                                    <TextView
                                        android:text="@string/project_name"
                                        style="@style/StyleTitleConfirm"
                                        />
                                    <TextView
                                        android:text="@{viewModel.request.projectName}"
                                        style="@style/StyleTextConfirm"
                                        />
                                    <View
                                        android:layout_width="match_parent"
                                        android:layout_height="@dimen/dp_1"
                                        android:layout_marginBottom="@dimen/dp_5"
                                        android:layout_marginTop="@dimen/dp_5"
                                        android:background="@color/colorPrimary"
                                        />
                                </LinearLayout>
                            </TableRow>

                            <TableRow
                                android:gravity="center_vertical">
                                <ImageView
                                    app:srcCompat="@drawable/ic_leave_type"
                                    tools:ignore="ContentDescription"
                                    style="@style/StyleIconConfirm"
                                    />
                                <LinearLayout
                                    android:layout_marginLeft="@dimen/dp_20"
                                    android:layout_marginStart="@dimen/dp_20"
                                    android:orientation="vertical"
                                    >
                                    <TextView
                                        android:text="@string/leave_type"
                                        style="@style/StyleTitleConfirm"
                                        />
                                    <TextView
                                        android:ellipsize="end"
                                        android:maxLines="1"
                                        android:text="@{viewModel.request.leaveType.name}"
                                        style="@style/StyleTextConfirm"
                                        />
                                    <View
                                        android:layout_width="match_parent"
                                        android:layout_height="@dimen/dp_1"
                                        android:layout_marginBottom="@dimen/dp_5"
                                        android:layout_marginTop="@dimen/dp_5"
                                        android:background="@color/colorPrimary"
                                        />
                                </LinearLayout>
                            </TableRow>

                            <TableRow
                                android:gravity="center_vertical"
                                android:visibility="@{viewModel.visibleLayoutCheckin ? View.VISIBLE : View.GONE}"
                                >
                                <ImageView
                                    app:srcCompat="@drawable/ic_clock"
                                    tools:ignore="ContentDescription"
                                    style="@style/StyleIconConfirm"
                                    />
                                <LinearLayout
                                    android:layout_marginLeft="@dimen/dp_20"
                                    android:layout_marginStart="@dimen/dp_20"
                                    android:orientation="vertical"
                                    >
                                    <TextView
                                        android:text="@string/check_in_time"
                                        style="@style/StyleTitleConfirm"
                                        />
                                    <TextView
                                        android:text="@{viewModel.checkInTime}"
                                        style="@style/StyleTextConfirm"
                                        />
                                    <View
                                        android:layout_width="match_parent"
                                        android:layout_height="@dimen/dp_1"
                                        android:layout_marginBottom="@dimen/dp_5"
                                        android:layout_marginTop="@dimen/dp_5"
                                        android:background="@color/colorPrimary"
                                        />
                                </LinearLayout>
                            </TableRow>

                            <TableRow
                                android:gravity="center_vertical"
                                android:visibility="@{viewModel.visibleLayoutCheckout ? View.VISIBLE : View.GONE}"
                                >
                                <ImageView
                                    app:srcCompat="@drawable/ic_clock"
                                    tools:ignore="ContentDescription"
                                    style="@style/StyleIconConfirm"
                                    />
                                <LinearLayout
                                    android:layout_marginLeft="@dimen/dp_20"
                                    android:layout_marginStart="@dimen/dp_20"
                                    android:orientation="vertical"
                                    >
                                    <TextView
                                        android:text="@string/check_out_time"
                                        style="@style/StyleTitleConfirm"
                                        />
                                    <TextView
                                        android:text="@{viewModel.checkOutTime}"
                                        style="@style/StyleTextConfirm"
                                        />
                                    <View
                                        android:layout_width="match_parent"
                                        android:layout_height="@dimen/dp_1"
                                        android:layout_marginBottom="@dimen/dp_5"
                                        android:layout_marginTop="@dimen/dp_5"
                                        android:background="@color/colorPrimary"
                                        />
                                </LinearLayout>
                            </TableRow>
                            <TableRow
                                android:gravity="center_vertical"
                                android:visibility="@{viewModel.detail ? View.VISIBLE : View.GONE}"
                                >
                                <ImageView
                                    app:srcCompat="@drawable/ic_reason"
                                    tools:ignore="ContentDescription"
                                    style="@style/StyleIconConfirm"
                                    />
                                <LinearLayout
                                    android:layout_marginLeft="@dimen/dp_20"
                                    android:layout_marginStart="@dimen/dp_20"
                                    android:orientation="vertical"
                                    >
                                    <TextView
                                        android:text="@string/status"
                                        style="@style/StyleTitleConfirm"
                                        />
                                    <FrameLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        >

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="@string/accepted"
                                            android:textColor="@color/color_green_status"
                                            android:textStyle="bold"
                                            android:visibility="@{viewModel.acceptStatus ? View.VISIBLE : View.GONE}"
                                            />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="@string/pending"
                                            android:textColor="@color/md_material_blue_800"
                                            android:textStyle="bold"
                                            android:visibility="@{viewModel.pendingStatus ? View.VISIBLE : View.GONE}"
                                            />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="@string/rejected"
                                            android:textColor="@color/color_red_fresh"
                                            android:textStyle="bold"
                                            android:visibility="@{viewModel.rejectStatus ? View.VISIBLE : View.GONE}"
                                            />
                                    </FrameLayout>
                                    <View
                                        android:layout_width="match_parent"
                                        android:layout_height="@dimen/dp_1"
                                        android:layout_marginBottom="@dimen/dp_5"
                                        android:layout_marginTop="@dimen/dp_5"
                                        android:background="@color/colorPrimary"
                                        />
                                </LinearLayout>
                            </TableRow>
                            <TableRow
                                android:gravity="center_vertical"
                                android:visibility="@{viewModel.detail ? View.VISIBLE : View.GONE}"
                                >
                                <ImageView
                                    app:srcCompat="@drawable/ic_reason"
                                    tools:ignore="ContentDescription"
                                    style="@style/StyleIconConfirm"
                                    />
                                <LinearLayout
                                    android:layout_marginLeft="@dimen/dp_20"
                                    android:layout_marginStart="@dimen/dp_20"
                                    android:orientation="vertical"
                                    >
                                    <TextView
                                        android:text="@string/being_handled_by"
                                        style="@style/StyleTitleConfirm"
                                        />
                                    <TextView
                                        android:text="@{viewModel.request.approver.name}"
                                        style="@style/StyleTextConfirm"
                                        />
                                    <View
                                        android:layout_width="match_parent"
                                        android:layout_height="@dimen/dp_1"
                                        android:layout_marginBottom="@dimen/dp_5"
                                        android:layout_marginTop="@dimen/dp_5"
                                        android:background="@color/colorPrimary"
                                        />
                                </LinearLayout>
                            </TableRow>
                        </TableLayout>

                        <TableLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/dp_10"
                            android:layout_marginEnd="@dimen/dp_10"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:layout_marginRight="@dimen/dp_10"
                            android:layout_marginStart="@dimen/dp_10"
                            android:stretchColumns="1"
                            android:visibility="@{viewModel.visibleLayoutCompensation ? View.VISIBLE : View.GONE}"
                            >
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_margin="@dimen/dp_5"
                                android:orientation="horizontal"
                                android:paddingBottom="@dimen/dp_10"
                                tools:ignore="UselessLeaf"
                                >
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_vertical"
                                    android:text="@string/compensation_time"
                                    android:textColor="@color/color_gray"
                                    android:textSize="@dimen/sp_18"
                                    android:textStyle="bold"
                                    tools:ignore="TooManyViews"
                                    />
                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/dp_2"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginLeft="@dimen/dp_5"
                                    android:layout_marginStart="@dimen/dp_5"
                                    android:background="@color/color_gray_light"
                                    />
                            </LinearLayout>
                            <TableRow
                                android:gravity="center_vertical">
                                <ImageView
                                    app:srcCompat="@drawable/ic_clock"
                                    tools:ignore="ContentDescription"
                                    style="@style/StyleIconConfirm"
                                    />
                                <LinearLayout
                                    android:layout_marginLeft="@dimen/dp_20"
                                    android:layout_marginStart="@dimen/dp_20"
                                    android:orientation="vertical"
                                    >
                                    <TextView
                                        android:text="@string/from"
                                        style="@style/StyleTitleConfirm"
                                        />
                                    <TextView
                                        android:text="@{viewModel.detail ? viewModel.request.compensation.fromTime : viewModel.request.compensationRequest.fromTime}"
                                        style="@style/StyleTextConfirm"
                                        />
                                    <View
                                        android:layout_width="match_parent"
                                        android:layout_height="@dimen/dp_1"
                                        android:layout_marginBottom="@dimen/dp_5"
                                        android:layout_marginTop="@dimen/dp_5"
                                        android:background="@color/colorPrimary"
                                        />
                                </LinearLayout>
                            </TableRow>

                            <TableRow
                                android:gravity="center_vertical">
                                <ImageView
                                    app:srcCompat="@drawable/ic_clock"
                                    tools:ignore="ContentDescription"
                                    style="@style/StyleIconConfirm"
                                    />
                                <LinearLayout
                                    android:layout_marginLeft="@dimen/dp_20"
                                    android:layout_marginStart="@dimen/dp_20"
                                    android:orientation="vertical"
                                    >
                                    <TextView
                                        android:text="@string/to"
                                        style="@style/StyleTitleConfirm"
                                        />
                                    <TextView
                                        android:text="@{viewModel.detail ? viewModel.request.compensation.toTime : viewModel.request.compensationRequest.toTime}"
                                        style="@style/StyleTextConfirm"
                                        />
                                    <View
                                        android:layout_width="match_parent"
                                        android:layout_height="@dimen/dp_1"
                                        android:layout_marginBottom="@dimen/dp_5"
                                        android:layout_marginTop="@dimen/dp_5"
                                        android:background="@color/colorPrimary"
                                        />
                                </LinearLayout>
                            </TableRow>

                            <TableRow
                                android:gravity="center_vertical">
                                <ImageView
                                    app:srcCompat="@drawable/ic_reason"
                                    tools:ignore="ContentDescription"
                                    style="@style/StyleIconConfirm"
                                    />
                                <LinearLayout
                                    android:layout_marginLeft="@dimen/dp_20"
                                    android:layout_marginStart="@dimen/dp_20"
                                    android:orientation="vertical"
                                    >
                                    <TextView
                                        android:text="@string/reason"
                                        style="@style/StyleTitleConfirm"
                                        />
                                    <TextView
                                        android:text="@{viewModel.request.reason}"
                                        style="@style/StyleTextConfirm"
                                        />
                                    <View
                                        android:layout_width="match_parent"
                                        android:layout_height="@dimen/dp_1"
                                        android:layout_marginBottom="@dimen/dp_5"
                                        android:layout_marginTop="@dimen/dp_5"
                                        android:background="@color/colorPrimary"
                                        />
                                </LinearLayout>
                            </TableRow>
                        </TableLayout>
                    </LinearLayout>
                </LinearLayout>
            </ScrollView>
            <FrameLayout
                android:id="@+id/frame_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:visibility="@{viewModel.visibleButtonSubmit ? View.VISIBLE : View.GONE}"
                >
                <Button
                    android:id="@+id/button_submit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/color_green"
                    android:onClick="@{viewModel::onClickSubmit}"
                    android:text="@string/submit"
                    android:textColor="@color/color_white"
                    android:visibility="@{viewModel.detail ? View.GONE : View.VISIBLE}"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="@{viewModel.detail ? View.VISIBLE : View.GONE}"
                    android:weightSum="2"
                    >
                    <Button
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/color_red_firebrick"
                        android:onClick="@{viewModel::onClickDelete}"
                        android:text="@string/delete"
                        android:textColor="@color/color_white"
                        tools:ignore="ButtonStyle"
                        />
                    <Button
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/color_green"
                        android:onClick="@{viewModel::onClickEdit}"
                        android:text="@string/edit"
                        android:textColor="@color/color_white"
                        tools:ignore="ButtonStyle"
                        />
                </LinearLayout>
            </FrameLayout>
        </RelativeLayout>
    </LinearLayout>
</layout>
